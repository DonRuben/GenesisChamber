#!/bin/bash

# AI Expert Council Simulator - Clean Script
# Removes all auto-generated files and directories

set -e  # Exit on error

# Colors for output
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m' # No Color

# Function to print colored output
print_status() {
    echo -e "${GREEN}[âœ“]${NC} $1"
}

print_warning() {
    echo -e "${YELLOW}[!]${NC} $1"
}

echo "AI Expert Council - Clean Script"
echo "================================"
echo ""
echo "This will remove all auto-generated files:"
echo "  - Virtual environment (.venv/)"
echo "  - Python cache files (__pycache__/)"
echo "  - Compiled Python files (*.pyc, *.pyo)"
echo "  - Distribution directories (dist/, build/, *.egg-info/)"
echo "  - pytest cache (.pytest_cache/)"
echo "  - mypy cache (.mypy_cache/)"
echo "  - Coverage reports (.coverage, htmlcov/)"
echo "  - Generated outputs (outputs/*.md)"
echo ""
read -p "Continue? (y/N) " -n 1 -r
echo ""

if [[ ! $REPLY =~ ^[Yy]$ ]]; then
    print_warning "Clean cancelled"
    exit 0
fi

echo ""

# Remove virtual environment
if [ -d ".venv" ]; then
    rm -rf .venv
    print_status "Removed virtual environment"
fi

# Remove Python cache directories
find . -type d -name "__pycache__" -exec rm -rf {} + 2>/dev/null || true
print_status "Removed __pycache__ directories"

# Remove compiled Python files
find . -type f -name "*.pyc" -delete 2>/dev/null || true
find . -type f -name "*.pyo" -delete 2>/dev/null || true
print_status "Removed compiled Python files"

# Remove distribution/build directories
[ -d "dist" ] && rm -rf dist
[ -d "build" ] && rm -rf build
find . -type d -name "*.egg-info" -exec rm -rf {} + 2>/dev/null || true
print_status "Removed distribution directories"

# Remove test/coverage artifacts
[ -d ".pytest_cache" ] && rm -rf .pytest_cache
[ -d ".mypy_cache" ] && rm -rf .mypy_cache
[ -f ".coverage" ] && rm -f .coverage
[ -d "htmlcov" ] && rm -rf htmlcov
print_status "Removed test/coverage artifacts"

# Remove .ruff_cache if it exists
[ -d ".ruff_cache" ] && rm -rf .ruff_cache

# Remove generated output files (but keep the directory)
if [ -d "outputs" ]; then
    find outputs -name "*.md" -type f -delete 2>/dev/null || true
    print_status "Cleaned outputs directory"
fi

# Remove DS_Store files (macOS)
find . -name ".DS_Store" -delete 2>/dev/null || true

echo ""
print_status "Clean complete!"
echo ""
echo "To set up again, run: ./run"